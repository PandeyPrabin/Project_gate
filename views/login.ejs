<div id="wrapper">
    <h1 class="ui centered blue header">Project Gate</h1>
    <div class="ui centered grid container">
        <div style="max-width: 500px;" class="column">
            <h2 class="ui center aligned icon header">
                <i class="circular users icon"></i> Sign In</h2>
            <noscript>
                <div class="ui  warning message">
                    <div class="header">No JavaScript detected!</div>
                </div>
            </noscript>

            <div id="IEerror" class="ui negative message">
                <div class="header">
                    This site doesn't really work with Internet Explorer or without javascript
                </div>
                <p>Get a hold of yourself! Use a real browser <noscript> and
                    <a href="https://www.google.fi/search?q=how+to+enable+javascript">enable javascript</a> </noscript>
                </p>
            </div>
            <form action="?" method="post" class="ui large form loginform">
                <div class="ui stacked secondary  segment">
                    <div class="field">
                        <label> Email </label>
                        <div class="ui icon input">
                            <input type="text" name="email" placeholder="Email address">
                            <i class="at icon"></i>
                        </div>
                    </div>

                    <div class="field">

                        <label>Password</label>
                        <div class="ui icon input">
                            <input type="password" name="password" placeholder="Password">
                            <i class="lock icon"></i>
                        </div>

                    </div>
                    <div class="ui hidden  divider"></div>
                    <div class="ui checkbox">
                        <input type="checkbox">
                        <label>remember me todo</label>

                    </div>

                    <div class="ui divider"></div>


                    <button class="ui fluid blue button" type="submit">Sign In</button>
                    <div class="ui error message"></div>

                </div>

                <script>
                    // for closing error message
                    $(".message .close")
                        .on("click", function () {
                            $(this)
                                .closest(".message")
                                .transition("fade");
                        });

                    function isIE(userAgent) {
                        userAgent = userAgent || navigator.userAgent;
                        return userAgent.indexOf("MSIE ") > -1 || userAgent.indexOf("Trident/") > -1;
                    }
                    if (!isIE()) {
                        document.getElementById("IEerror").style.display = "none";
                    }
                </script>
                <div class="ui message">

                    <a href="/forgot">Forgot your password?</a>
                    <div class="ui content"> No account yet?
                        <a href="/register"> Register!</a>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>